<h1>Edit Kicks!</h1>
    <form action="/shoes/<%= @shoe.id%>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">

    <h3>Name: <input type="text" name="name" placeholder= "<%= @shoe.name %>"></h3>
    <h3>Date: <input type="date" name="date" placeholder= "<%= @shoe.date %>"></h3>
    <h3>Brand: <input type="text" name="brand" placeholder= "<%= @shoe.brand %>"></h3>
    <h3>release: <input type="date" name="release" placeholder= "<%= @shoe.release %>"></h3>
    <h3>Hype Rating: <input type="text" name="hyperating" placeholder= "<%= @shoe.hyperating %>"></h3>
    
    <input type="submit" value="submit" value="Update Kicks!">
</form>