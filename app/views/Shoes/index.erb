<p><%=shoe.hyperating%></p>
<form method="POST" action="/shoes/<%=shoe.id%>">
<input type="hidden" name="_method" value="delete">
<button type="delete"> Delete Shoe</button>
</form>
<form method="POST" action="/shoes/<%=shoe.id%>">
<input type="hidden" name="_method" value="edit">
<button type="submit"> Edit Shoe</button>
<% end %>
